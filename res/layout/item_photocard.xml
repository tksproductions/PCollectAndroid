<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/photocardBorder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/photocard_border_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,1:1.55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photocardImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/photocardBorder"
        app:layout_constraintEnd_toEndOf="@id/photocardBorder"
        app:layout_constraintStart_toStartOf="@id/photocardBorder"
        app:layout_constraintTop_toTopOf="@id/photocardBorder" />

</androidx.constraintlayout.widget.ConstraintLayout>