<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/photocardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:1.55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/photocardImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/photocardBorder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/photocard_border_normal"
        app:layout_constraintBottom_toBottomOf="@id/photocardContainer"
        app:layout_constraintEnd_toEndOf="@id/photocardContainer"
        app:layout_constraintStart_toStartOf="@id/photocardContainer"
        app:layout_constraintTop_toTopOf="@id/photocardContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>